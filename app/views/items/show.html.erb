<% provide(:title, 'All Items') %>

<div class="row">

  <div class="span6 offset3">
  	<h1>Show Items</h1>
  	<p style = "color:grey;"> An item showing its price and category, click on item name to edit.</p>
<table>
	<tr>
	  
		<td><b>Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></td>
		<td><b>Category&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></td>
		<td><b>Price&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></td>
	  
    </tr>
    <tr>
		<td>
		    <ul class="users">
     			<li><%= @item.name %> </li>
     		</ul>
     	</td>

     	<td>
		    <ul class="users">
     			<li><%= @item.price %></li>
     		</ul>
     	</td>

     	<td>
		    <ul class="users">
     			<li><%= @item.category %></li>
     		</ul>

     	</td>


     	<td>

		    <ul class="users">
     	    <li> <%= link_to "delete", @item, method: :delete,
                                  data: { confirm: "You sure?" } %> </li>
                              </ul>
        </td>

      
		
	</tr>
</table>

</div>
</div>