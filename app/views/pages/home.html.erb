

<div class="row">
  <div class="span6 offset3">
  	<h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<div class="center hero-unit">



  <h4>Retail Installment Payment App</h4>
<p>
  Please sign up to view all payments you made on items bought. Admin should sign in to view and update payments made by customers.
</p>

</div>

